    <script>
        let incomingTime = document.getElementById('incomingTime');
        let outgoingTime = document.getElementById('outgoingTime');
        let setIncoming = document.getElementById('setIncoming');
        let setOutgoing = document.getElementById('setOutgoing');
        let optArrival = document.getElementById('optArrival');
        let optOutgoing = document.getElementById('optOutgoing');
        setIncoming.addEventListener('click', () => {
            let a = (incomingTime.value[0]);
            let b = (incomingTime.value[1]);
            let c = (incomingTime.value[3]);
            let d = (incomingTime.value[4]);
            let hours = (a+b);
            let minutes = (c+d);
            if(hours>12){
                hours = hours-12;
                optArrival.innerHTML = (`${hours}:${minutes} PM`);
            }
            else{
                optArrival.innerHTML = (`${hours}:${minutes} AM`);
            }
        })            

        setOutgoing.addEventListener('click', () => {
            let a = (outgoingTime.value[0]);
            let b = (outgoingTime.value[1]);
            let c = (outgoingTime.value[3]);
            let d = (outgoingTime.value[4]);
            let hours = (a+b);
            let minutes = (c+d);
            if(hours>12){
                hours = hours-12;
                optOutgoing.innerHTML = (`${hours}:${minutes} PM`);
            }
            else{
                optOutgoing.innerHTML = (`${hours}:${minutes} AM`);
            }
        })            
    </script>
